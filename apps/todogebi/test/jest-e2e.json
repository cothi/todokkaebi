{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "libs/decorators/(.*)": "<rootDir>/../libs/decorators/src/$1",
    "libs/decorators": "<rootDir>/../libs/decorators/src"
  },
  "globalTeardown": "<rootDir>/teardown.ts"
}